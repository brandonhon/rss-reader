# RSS Reader Frontend Environment Configuration
# Copy this file to .env and adjust values as needed

# PocketBase API URL
VITE_API_URL=http://127.0.0.1:8090

# Development settings
VITE_DEV_MODE=true

# Frontend configuration
VITE_APP_TITLE="RSS Reader"
VITE_APP_VERSION="1.0.0"

# Feature flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_KEYBOARD_SHORTCUTS=true
VITE_ENABLE_SEARCH=true

# Default theme (light|dark|system)
VITE_DEFAULT_THEME=system

# Panel configuration
VITE_MIN_PANEL_WIDTH=250
VITE_DEFAULT_LEFT_PANEL_WIDTH=300
VITE_DEFAULT_MIDDLE_PANEL_WIDTH=400
VITE_DEFAULT_RIGHT_PANEL_WIDTH=600